<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rectangle_orange"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kapitalleistung bei Invalidität"
            android:textSize="30dp"
            android:textColor="@color/Dunkelrot"
            android:gravity="center"
            android:layout_marginVertical="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Die Kapitalleistung bei Invalidität hilft bei der einmaligen Anschaffung für einen barrierefreien Neustart nach dem Unfall. Die Kapitalleistung lässt sich nach dem Grad der dauernden Invalidität berechnen und wird bei jedem messbaren Invaliditätsgrad gezahlt. In Verbindung mit verschiedenen Leistungsmodellen können Sie eine Erhöhung der jeweiligen Auszahlungssumme ab bestimmten Invaliditätsgraden vereinbaren."
            android:textSize="25dp"
            android:gravity="center"/>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>