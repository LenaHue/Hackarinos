<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >



    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/rectangle_yellow"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".MainActivity"
        android:layout_margin="20dp"
        >

        <LinearLayout
            android:id="@+id/linearlayout_expertenmeinungen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:paddingTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Expertenmeinungen"
                android:textSize="30dp"
                android:textColor="@color/Dunkelrot"
                android:gravity="center"
                android:layout_marginVertical="20dp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/imageview_drs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/drs_logo"
                android:layout_weight="1"
                android:layout_marginBottom="20dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Jean-Marc Clément \n(Stellvertretender Vorsitzender des Deutschen Rollstuhl-Sportverbandes e.V.)"
                android:layout_weight="1"
                android:textColor="@color/Dunkelrot"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="' Wir unterstützen Menschen mit Mobilitätseinschränkungen, die einen Rollstuhl nutzen. Besonders Sport und Bewegung bilden dabei wichtige Bausteine für ein aktives und selbstbestimmtes Leben. Darum unterstützt der DRS den Rollstuhlsport mit über 28 Sportarten - vom Golfen bis zum Tennis. Fast alles iist machbar! Dass der Sport mit Einschränkungen oftmals mehr kostet als ohne Einschränkung ist naheliegend: Längere Anfahrtswege zum gewünschten Verein oder die Ausrüstung gehen ins Geld. SO kostet ein individueller Sportrollstuhl schnell 4.000 Euro. Unsere Erfahrung bestätigt die Annahme, dass ein aktives Leben mit mobilen Einschränkungen in der Regel teuer ist. ' "
                android:layout_marginBottom="30dp"
                android:textSize="20dp"/>



            <ImageView
                android:id="@+id/imageview_ihr"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ihr"
                android:layout_weight="1"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Jutta Eich \n(Geschäftsführerin IHR)"
                android:layout_weight="1"
                android:textColor="@color/Dunkelrot"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="' Wir helfen dabei, die private Umgebung nach einem folgenschweren Unfall bedarfsgerecht zu gestalten. Aus langjähriger Erfahrung wissen wir, dass die Kosten dafür etwa beim 1,5-fachen der bisherigen Lebenskosten liegen. Eine entsprechende Absicherung halten wir für besonders wichtig. ' "
                android:layout_marginBottom="30dp"
                android:textSize="20dp"/>




            <ImageView
                android:id="@+id/imageview_sodermanns"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/sodermanns"
                android:layout_weight="1"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Frank Sodermanns \n(Inhaber und Geschäftsführer Reha-Mobilitätszentrum NRW)"
                android:layout_weight="1"
                android:textColor="@color/Dunkelrot"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="' Wir bauen Fahrzeuge und liefern Elektrorollstühle für Menschen mit Behinderung. Aus meiner über 20-jährigen Erfahrung weiß ich, dass sich ein Pkw-Umbau durchaus zwischen 2.000€ und 80.000€ bewegen kann. Ebenso liegt die Anschaffung eines hochwertigen Elektrorollstuhls zwischen 15.000€ und 35.000€. ' "
                android:layout_marginBottom="30dp"
                android:textSize="20dp"/>

        </LinearLayout>


    </RelativeLayout>

</ScrollView>