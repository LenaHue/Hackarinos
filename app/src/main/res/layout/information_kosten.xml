<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rectangle_orange"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kosten steigen um ca. 50%"
            android:textSize="30dp"
            android:textColor="@color/Dunkelrot"
            android:gravity="center"
            android:layout_marginVertical="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Die Erfahrung zeigt, dass ein barrierefreies Leben um etwa 50% teurer ist. Zusätzlich zu den schon genannten Kosten fallen Ausgaben für Arznei- und Hilfsmittel an. Gegebenenfalls wird eine Haushaltshilfe benötigt. Auch Reisen und andere Freizeitaktivitäten werden wesentlich teurer."
            android:textSize="25dp"
            android:gravity="center"/>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>